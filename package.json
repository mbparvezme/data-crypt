{
  "name": "data-crypt",
  "version": "1.0.0-rc1",
  "description": "A lightweight and powerful encryption library for Node.js and browser. It allows you to encrypt and decrypt text or files using a password.",
  "type": "module",
  "bin": {
    "datacrypt": "./dist/cli.js",
    "data-crypt": "./dist/cli.js",
    "dc": "./dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && node src/lib/setup-cli.js",

    "build:docs": "cp README.md docs/ && npm run build",
    "deploy:docs": "cp README.md docs/ && git add docs/README.md && git commit -m 'Update docs' && git push",

    "test": "ts-node-esm test/index.test.ts",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "dev:cli": "node --loader tsx src/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbparvezme/data-crypt.git"
  },
  "bugs": {
    "url": "https://github.com/mbparvezme/data-crypt/issues"
  },
  "homepage": "https://github.com/mbparvezme/data-crypt#readme",
  "license": "MIT",
  "author": "M B Parvez",
  "keywords": [
    "aes",
    "encryption",
    "crypto",
    "pbkdf2",
    "aes-gcm",
    "browser",
    "nodejs",
    "file-encryption",
    "password-encryption",
    "cross-platform",
    "webcrypto",
    "typescript"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/node": "^22.9.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
