{
  "name": "data-crypt",
  "version": "1.0.0-rc2",
  "description": "A lightweight and powerful encryption library for Node.js and browser. It allows you to encrypt and decrypt text or files using a password.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "dc": "./dist/cli.js",
    "datacrypt": "./dist/cli.js",
    "data-crypt": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run setup-bin",
    "setup-bin": "node ./src/lib/setup-cli.js",
    "prepublishOnly": "npm run build",
    "test": "tsx ./test/index.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbparvezme/data-crypt.git"
  },
  "keywords": [
    "aes",
    "encryption",
    "crypto",
    "pbkdf2",
    "aes-gcm",
    "browser",
    "nodejs",
    "file-encryption",
    "password-encryption",
    "cross-platform",
    "webcrypto",
    "typescript"
  ],
  "author": "M B Parvez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mbparvezme/data-crypt/issues"
  },
  "homepage": "https://github.com/mbparvezme/data-crypt#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
